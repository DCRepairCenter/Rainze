# Auto detect text files and perform LF normalization
* text=auto

# Markdown files should use LF line endings
*.md text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Python files
*.py text eol=lf

# Rust files
*.rs text eol=lf

# JSON and YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.wav binary
*.mp3 binary
*.ogg binary
